<%= form_for [current_user, @location], :html => { :class => 'well form-horizontal', :id => 'location_entry_form'  } do |f| %>
  <fieldset>
    <div class='control-group'>
      <%= f.label "Name", :class => 'control-label' %>
      <%= f.text_field :name, :class => 'controls' %>
    </div>
    <div class='control-group'>
      <%= f.label :latitude , :class => 'control-label' %>
      <%= f.text_field :latitude, data: {orig: @location.latitude}, :class => 'controls' %>
    </div>
    <div class='control-group'>
      <%= f.label :longitude, :class => 'control-label' %>
      <%= f.text_field :longitude, data: {:orig => @location.longitude, :'min-value' => -1.5, :'max-value' => -1.6}, :class => 'controls' %>

    </div>
    <div class='form-actions'>
      <%= f.submit %>
    </div>
  </fieldset>
<% end %>
